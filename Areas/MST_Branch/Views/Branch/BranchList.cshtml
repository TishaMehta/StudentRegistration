@{
    ViewData["Title"] = "List Country";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data
@model DataTable
 
<h3>Branch List</h3>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="container-fluid">
                        <a class="navbar-brand">Branch Search</a>
                        <form class="d-flex w-75" role="search" asp-area="MST_Branch" asp-controller="Branch" asp-action="BranchList">
                            <input class="form-control me-2" type="text" placeholder="Branch Name" aria-label="Search" name="BranchName">
                            <input class="form-control me-2" type="text" placeholder="Branch Code" aria-label="Search" name="BranchCode">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a class=" btn btn-primary col-md-3" asp-area="MST_Branch" asp-controller="Branch" asp-action="AddBranch">Add Branch</a>

                        </form>
                    </div>

                       
                    </div>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                            <th scope="col">BranchID</th>
                            <th scope="col">BranchName</th>
                            <th scope="col">BranchCode</th>
                            <th scope="col">Created</th>
                            <th scope="col">ModifiDate</th>

                            <th scope="col">Delete</th>
                            <th scope="col">Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td>@dr["BranchID"]</td>
                                <td>@dr["BranchName"]</td>
                                <td>@dr["BranchCode"]</td>
                                <td>@Convert.ToDateTime(dr["Created"])</td>
                                <td>@Convert.ToDateTime(dr["Modified"])</td>
                                <td>
                                    <form method="post" asp-area="MST_Branch" asp-controller="Branch" asp-action="DeleteBranch">
                                        <input type="hidden" name="BranchID" value="@Convert.ToInt32(dr["BranchID"])" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                                <td>
                                    <form method="post" asp-area="MST_Branch" asp-controller="Branch" asp-action="AddBranch">
                                        <input type="hidden" name="BranchID" value="@Convert.ToInt32(dr["BranchID"])" />
                                        <button type="submit" class="btn btn-outline-warning">Edit</button>
                                    </form>
                                </td>

                            </tr>
                        }



                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
